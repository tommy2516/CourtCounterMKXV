<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.courtcountermkxv.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Team A"
                android:textSize="45dp"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_bright" />

            <Button
                android:id="@+id/tommy03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="addThreeToTeamA"
                android:text="+3"
                android:textSize="50dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/tommy02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="addTwotoTeamA"
                android:text="+2"
                android:textSize="50dp"
                android:textColor="@color/abc_search_url_text" />

            <Button
                android:id="@+id/tommy01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="addOnetoTeamA"
                android:text="+1"
                android:textSize="50dp"
                android:textColor="@color/abc_tint_seek_thumb" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Team B"
                android:textSize="45dp"
                android:textColor="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_bright" />

            <Button
                android:id="@+id/tommy06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="addThreeToTeamB"
                android:text="+3"
                android:textSize="50sp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/tommy05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="addTwotoTeamB"
                android:text="+2"
                android:textSize="50dp"
                android:textColor="@color/abc_search_url_text" />

            <Button
                android:id="@+id/tommy04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="addOnetoTeamB"
                android:textColor="@color/abc_btn_colored_borderless_text_material"
                android:text="+1"
                android:textSize="50dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="reset"
        android:text="reset"
        android:textSize="50dp" />


</LinearLayout>


